@import "../../../../../style/public/article_list.wxss";
@import "../../../style/skin.wxss";


.list {
	padding: 20rpx 20rpx;
	display: flex;
	flex-direction: column;
}

.list .item {
	width: 100%;
	padding: 40rpx 10rpx 40rpx 40rpx;
	background-color: #fff;
	border-radius: 40rpx;
	margin-bottom: 20rpx;
	display: flex;
	align-items: center;
}

.list .item .left {
	flex: 1;
	display: flex;
	flex-direction: column;
}

.list .item .left .line1 {
	width: 100%;
	font-size: 32rpx;
	font-weight: bold;
}

.list .item .left .line2 {
	width: 100%;
	font-size: 26rpx;
	margin-top: 10rpx;
	font-weight: bold;
}

.list .item .right {
	display: flex;
	align-items: flex-start;
}

.list .item .right .sy {
	font-size: 26rpx;
	margin-right: 7rpx;
	margin-top: 5rpx;
}

.list .item .right .price {
	font-size: 40rpx;
}

.list .item .flag {
	padding: 0 10rpx;
	color: #ccc;
}


.refresh {
	position: fixed;
	left: 10rpx;
	bottom: 200rpx;
	z-index: 99999;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background-color: rgba(101, 136, 230, 0.2);
	border-radius: 50%;
	width: 70rpx;
	height: 70rpx;
	font-size: 24rpx;
	color: #4682B4
}